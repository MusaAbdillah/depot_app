<%= simple_form_for(@product) do |f| %>

    <%= f.input :title, label: "Nama Produk" %>
    <%= f.association :category, label: "Kategori Produk", prompt: "== Pilih Kategori Produk ==" %>
    <%= f.input :image_url, label: "Link Gambar" %>
    <%= f.input :price, label: "Harga" %>
    <%= f.input :description, input_html: {rows: '10'}, label: "Deskripsi" %>
   	<%= f.button :submit,"Tambah Produk" ,:class => "btn btn-success" %>

<% end %>