<div class="col-md-6">
<%= simple_form_for(@product) do |f| %>

    <%= f.input :title %>
    <%= f.input :description, input_html: {rows: '10'} %>
    <%= f.input :image_url %>
    <%= f.input :price %>
    <%= f.association :category, label: "Product category" %>
   	<%= f.button :submit, :class => "btn btn-success" %>

<% end %>
</div>