<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-bordered">
  <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td> <%= image_tag(product.image_url, class: 'list_image') %></td>
        <td></td>
        <td class="list_description">
          <dl>
            <dt> <%= product.title %> </dt>
            <dd> <%= (product.description).truncate_words(10) %> </dd>
          </dl>       
        </td>

        <td class="list_action"><%= link_to 'Show', product, class: "btn btn-info btn-sm" %></td>
        <td class="list_action"><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %></td>
        <td class="list_action"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </td>
      </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
