<div class="container-fluid">
<div class="row">
	<div class="col-sm-12 col-md-12">
		<h3> Produk Paling Laris! </h3>
		<div class="col-sm-12 col-md-3">
            <div class="card" style="border: 1px solid black;">
                <%= link_to (image_tag @products.first.image_url, class: "card-img-top"), product_path(@products.first.id) %>
                <div class="card-block">
                    <div class="card-text">
                       <%= link_to @products.first.title, product_path(@products.first.id) %>
                    </div>
                </div>
            </div>	           		
		</div>
		<div class="col-sm-12 col-md-3">
            <div class="card" style="border: 1px solid black;">
                <%= link_to (image_tag @products.last.image_url, class: "card-img-top"), product_path(@products.last.id) %>
                <div class="card-block">
                    <div class="card-text">
                       <%= link_to @products.last.title, product_path(@products.last.id) %>
                    </div>
                </div>
            </div>   
		</div>
	</div>
</div>
<hr>

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12 col-md-3">
			<ul class="list group">
				<li class="list-group-item disabled"><b>Kategori Produk</b></li>
				<% if @categories.any? %>
					<% @categories.each do |category| %>
			  			<li class="list-group-item"><%= link_to category.title, store_show_path(category) %></li>
			  		<% end %>
			  	<% else %>
			  		<li class="list-group-item">No Category right now!</li>
			  	<% end %>
			</ul>
		</div>
		<div class="col-sm-12 col-md-9">
			<div class="row">
	        	<% @products.each do |p| %>
	            <div class="col-sm-6 col-md-4 col-lg-3">
	                <div class="card">
	                    <%= link_to (image_tag p.image_url, height: 200, width: 180, class: "card-img-top"), product_path(p) %>
	                    <div class="card-block">
	                        <div class="card-text">
	                           <%= link_to p.title, product_path(p) %>
	                        </div>
	                    </div>
	                </div>
	            </div>
	            <% end %>
	        </div>					
			<div class="text-right">
			<%= will_paginate @products %>
			</div>
		</div>
	</div>
</div>