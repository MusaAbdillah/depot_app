					  <%= link_to (image_tag @products.last.image_url, height: 300, width: 280, class: "card-img-top"), product_path(@products.last.id) %>
					  <div class="card-block">
					    <p class="card-title" style="text-align: center; font-weight: bold;">
					    	<%= link_to @products.last.title, product_path(@products.last.id) %>
					    </p>
					  </div>
					</div>
				</div>
			</div>		
		</div>
	</div>
</div>
