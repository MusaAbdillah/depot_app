<div class="container-fluid">
<div class="row">
	<div class="col-sm-12 col-md-12">
		<h3> Produk Paling Laris! </h3>
		<div class="col-sm-12 col-md-3" style="text-align: center; font-weight: bold; margin-bottom: 25px;">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-3" style="padding: 5px;">
					<div class="card" style="height: 300px; width: 280px; padding-bottom: 10px">
					  <%= link_to (image_tag @products.first.image_url, height: 300, width: 280, class: "card-img-top"), product_path(@products.first.id) %>
					  <div class="card-block">
					    <p class="card-title" style="text-align: center; font-weight: bold;">
					    	<%= link_to @products.first.title, product_path(@products.first.id) %>
					    </p>
					  </div>
					</div>
				</div>
			</div>		
		</div>
		<div class="col-sm-12 col-md-3" style="text-align: center; font-weight: bold; margin-bottom: 25px;">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-3" style="padding: 5px;">
