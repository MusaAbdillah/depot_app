
	<% if notice %>
		<p id="notice"><%= notice %></p>
	<% end %>
	<h3> <%= t('.title')%> </h3>
	<table>
		<%= render (@cart.line_items)%>


		<tr class="total_line">
			<td colspan="2"> Total </td>
			<td class="total_cell">Rp <%= number_with_delimiter(@cart.total_price) %> </td>		
		</tr>
		
	</table>
	<%= button_to t('.checkout'), new_order_path, method: :get %><hr/>
	<%= button_to t('.empty'), @cart, method: :delete, data: { confim: "Are you sure?" } %>
