<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%=raw t('errors.template.header',count: @order.errors.count,model: t('activerecord.models.order')) %> </h2>
      <p> <%= t('errors.template.body')%> </p>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :name, t('.name') %></td>
        <td><%= f.text_field :name, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :address, t('.address_html') %></td>
        <td><%= f.text_area :address, rows: 4, cols: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :email, t('.email') %></td>
        <td><%= f.text_field :email, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :pay_type, t('.pay_type') %></td>
        <td>
            <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: t('.pay_prompt_html') %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit t('.submit') %></td>
      </tr>
    </tbody>
  </table>
<% end %>
