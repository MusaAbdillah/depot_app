<% provide(:title, "Admin") %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-3">
            <%= render 'show_navbar' %>
        </div>
        <div class="col-sm-12 col-md-9 text-center">
        <h1> Selamat Datang <%= current_user.name %> </h1>
		<h2><%= (Time.now).strftime("%A, %d %B %Y %I:%M %p") %></h2>

		<% if current_user && current_user.admin? %>
			<h3>Kita Mempunyai <strong><%= pluralize(@total_order, 'Order') %></strong>.</h3>
		<% else %>
			<h3> Ayo Belanja!</h3> <%= button_to "Shop now!", admin_path, class: "btn btn-danger" %>
		<% end %>
		</div>
    </div>
</div>