<div class="depot_form">
	<%= form_tag do %>
	<fieldset>
		<legend> Please Log In </legend>
		<table class="table table-default">
			<tbody>
				<tr class="form-group">
					<td><%= label_tag :name, 'Name' %></td>
					<td><%= text_field_tag :name, params[:name], class: "form-control" %></td>
				</tr>
				<tr class="form-group">
					<td><%= label_tag :password, 'Password' %></td>
					<td><%= password_field_tag :password, params[:password], class: "form-control" %></td>
				</tr>
				<tr class="form-group">
					<td></td>
					<td colspan="2"><%= submit_tag 'Login', class: "btn btn-success" %></td>
				</tr>
			</tbody>
		</table>
	</fieldset>
	<% end %>
</div>
