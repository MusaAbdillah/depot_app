<% provide(:title, "Masuk") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_tag do %>
		<fieldset>
			<legend> Silahkan Masuk </legend>
			
					<div class="form-group">
						<%= label_tag :email, 'Email' %>
						<%= text_field_tag :email, params[:email], class: "form-control" %>
					</div>
					<div class="form-group">
						<%= label_tag :password, 'Password' %>
						<%= password_field_tag :password, params[:password], class: "form-control" %>
					</div>
					<div class="form-group">				
						<%= submit_tag 'Masuk', class: "btn btn-success btn-block" %>
					</div>
					<div>	
							<p> 
								Belum punya akun? 
								<%= link_to "Daftar Sekarang!", new_user_path, class: "btn btn-danger btn-block" %> 
							</p>
					</div>			
		</fieldset>
		<% end %>
	</div>
</div>