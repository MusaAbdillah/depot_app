	<!-- Static navbar -->  
      <header class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "AB OnlineShop", store_path, id: "logo" %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              	<% if current_user %>
					<% if current_user.admin? %>
						<li> <%= link_to 'Transaksi', orders_path %> </li>
						<li> <%= link_to 'Produk', products_path %> </li>
						<li> <%= link_to 'Pengguna', users_path %> </li>
						<li>  <%= link_to "Kategori", categories_path %> </a> </li>
					<% end %>			
				<% else %>
					<!-- new style without translation -->
					<li>  <%= link_to 'Pertanyaan', question_path %> </li>
					<li>  <%= link_to 'Informasi', news_path %> </li>
					<li>  <%= link_to 'Hubungi Kami', contact_path %> </a> </li>

					<!-- old sytle with translation
					<li>  <%= link_to t('.questions'), question_path %> </li>
					<li>  <%= link_to t('.news'), news_path %> </li>
					<li>  <%= link_to t('.contact'), contact_path %> </a> </li> -->
				<% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              	<% if @cart %>
				<li>
					<a href="#" data-toggle="modal" data-target=".bd-example-modal-lg" id="my-cart">
						<b>
							<span class="glyphicon glyphicon-shopping-cart"></span>
							<span class="label label-success" id="cart-badge">
							<%= pluralize(cart_quantity(@cart.line_items), 'item')%> 									
							</span>
							 <span class="label label-success" id="cart-total">
								Rp <%= number_with_delimiter(grand_total_price_with_go_jek_cost(@cart.line_items))%>
							</span>
						</b>
					</a>
				</li>
				<% end %>
				
				<% if current_user %>
					<li> <%= link_to current_user.email, user_path(current_user) %> </li>	
					<li> <%= link_to "Keluar", logout_path, method: :delete %> </li>
				<% else %>
					<li> <%= link_to "Daftar", new_user_path %> </li>
					<li> <%= link_to "Masuk", login_path %> </li>
				<% end %>
				<!-- form for i18n -->
				<!-- <li>
					<%= form_tag store_path, class: 'locale' do %>
						<%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()'%>
						<%= submit_tag 'submit' %>
						<%= javascript_tag "$('.locale input').hide()" %>
					<% end %>						
				</li> -->
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </header>

 	<!-- modal target -->
	<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
	  	<div class="modal-dialog modal-md">
	  		<div class="modal-content">
		      	<div class="modal-body" id="cart-body">
		        	<% if @cart %>
							<%= render @cart %>
					<% end %>
		      	</div>
		      	<div class="modal-footer">
		        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Keluar</button>
		      	</div>
	      	</div>
	  	</div>
	</div>
