<!DOCTYPE html>
<html>
	<head>
	  <title><%= title(yield(:title)) %></title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<%= render "layouts/header" %>
	<body class="<%= controller.controller_name %>">
		<div class="container-fluid">
		
				<% flash.each do |alert_key, message_value| %>
					<div class="alert alert-<%= alert_key %> alert-dismissable">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> 
						<%= message_value %> 
					</div>
				<% end %>

			<div id="columns">
				<div id="side">
					<div id="cart">
					<% if @cart %>
						<% hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
							<%= render @cart %>
						<% end %>
					<% end %>
					</div>
					<ul>
						<li> <%= link_to t('.home'), store_path %> </li>
						<% if current_user && current_user.admin? %>
							<li> <%= link_to 'Orders', orders_path %> </li>
							<li> <%= link_to 'Products', products_path %> </li>
							<li> <%= link_to 'Users', users_path %> </li>
							<li><hr></li>				
						<% else %>
							<li> <a href="#"> <%= t('.questions') %> </a> </li>
							<li> <a href="#"> <%= t('.news') %> </a> </li>
							<li> <a href="#"> <%= t('.contact') %> </a> </li>
							<li><hr></li>
						<% end %>
					</ul>
				</div><!-- end div of side-->

				<div id="main">
					<%= yield %>
				</div><!-- end div of main-->
			</div><!-- end div of columns-->

			<%= render "layouts/footer" %>
		</div><!-- end div of container fluid-->
	</body>
</html>
