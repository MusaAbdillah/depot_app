<% provide(:title, "Pengguna") %>
<div class="table-responsive">
<%= will_paginate %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nama</th>
        <th>Email</th>
        <th>No Handphone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td>
            <%= link_to user, class: "btn btn-info btn-sm" do %> 
              <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_user_path(user), class: "btn btn-warning btn-sm" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
            </td>
          <td>
            <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
<%= link_to 'Tambah Pengguna', new_user_path, class: "btn btn-success" %>
