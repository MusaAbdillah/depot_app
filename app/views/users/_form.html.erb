<%= simple_form_for(@user) do |f| %>

	<%= f.input :name, label: "Nama lengkap" %>

	<%= f.input :email %>

	<%= f.input :phone, label: "No Handphone" %>

	<%= f.input :password, as: :password %>

	<%= f.input :password_confirmation, as: :password, label: "Konfirmasi password" %> 

	<%= f.input :gender, label: "Jenis Kelamin", as: :radio_buttons, collection: ['Laki-Laki','Perempuan']%>

	<%= f.button :submit, 'Buat Akun',:class => "btn btn-success btn-lg btn-block" %>

<% end %>
